<Window x:Class="ServerManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Server Manager" Height="500" Width="700" Loaded="MainWindow_Loaded">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Backend Controls" FontWeight="Bold" Margin="0,0,0,5"/>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10" VerticalAlignment="Center">
                <Button Name="StartBackendButton" Content="Start Backend" Width="100" Margin="5" Click="StartBackendButton_Click"/>
                <Button Name="StopBackendButton" Content="Stop Backend" Width="100" Margin="5" Click="StopBackendButton_Click"/>
                <Button Name="RestartBackendButton" Content="Restart Backend" Width="100" Margin="5" Click="RestartBackendButton_Click"/>
                <TextBlock Text="Status: " FontWeight="Bold" Margin="20,0,0,0"/>
                <TextBlock Name="BackendStatusText" Text="Stopped" Foreground="Red" Margin="5,0,0,0"/>
                <TextBlock Name="BackendIpPortText" Text="" Margin="10,0,0,0"/>
            </StackPanel>

            <TextBlock Text="Frontend Controls" FontWeight="Bold" Margin="0,15,0,5"/>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10" VerticalAlignment="Center">
                <Button Name="StartFrontendButton" Content="Start Frontend" Width="100" Margin="5" Click="StartFrontendButton_Click"/>
                <Button Name="StopFrontendButton" Content="Stop Frontend" Width="100" Margin="5" Click="StopFrontendButton_Click"/>
                <Button Name="RestartFrontendButton" Content="Restart Frontend" Width="100" Margin="5" Click="RestartFrontendButton_Click"/>
                <TextBlock Text="Status: " FontWeight="Bold" Margin="20,0,0,0"/>
                <TextBlock Name="FrontendStatusText" Text="Stopped" Foreground="Red" Margin="5,0,0,0"/>
                <TextBlock Name="FrontendIpPortText" Text="" Margin="10,0,0,0"/>
            </StackPanel>

            <TextBlock Text="Port Management" FontWeight="Bold" Margin="0,15,0,5"/>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10" VerticalAlignment="Center">
                <Button Name="TerminatePortButton" Content="Kill Port 8000" Width="100" Margin="5" Click="TerminatePortButton_Click"/>
                <Button Name="KillPort5000Button" Content="Kill Port 5000" Width="100" Margin="5" Click="KillPort5000Button_Click"/>
                <Button Name="StartSimpleServerButton" Content="Simple Server" Width="100" Margin="5" Click="StartSimpleServerButton_Click"/>
            </StackPanel>

            <TextBlock Text="Log Output" FontWeight="Bold" Margin="0,15,0,5"/>
            <TextBox Name="LogTextBox" Margin="0,5,0,0" Height="200" VerticalScrollBarVisibility="Auto" IsReadOnly="True" TextWrapping="Wrap"/>
        </StackPanel>
    </Grid>
</Window>
